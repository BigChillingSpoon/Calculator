<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="600" Width="440">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid Background="#1E1E1E">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- FILE SELECTION SECTION -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10 10 10 20">

                <!-- Input file -->
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBlock Text="{StaticResource InputFileLabel}"
                               Foreground="White" Width="90"
                               VerticalAlignment="Center" Margin="0 0 5 0"/>
                    <TextBox Text="{Binding InputFilePath}" Width="220"
                             Margin="0 0 10 0" Background="#2D2D30" 
                             Foreground="White" BorderBrush="#3E3E42"
                             Padding="6,4"/>
                    <Button Content="{StaticResource BrowseButton}"
                            Command="{Binding SelectInputFileCommand}"
                            Style="{StaticResource BrowseButtonStyle}"/>
                </StackPanel>

                <!-- Output directory -->
                <StackPanel Orientation="Horizontal" Margin="0 8 0 0">
                    <TextBlock Text="{StaticResource OutputDirLabel}"
                               Foreground="White" Width="90"
                               VerticalAlignment="Center" Margin="0 0 5 0"/>
                    <TextBox Text="{Binding OutputDirectory}" Width="220"
                             Margin="0 0 10 0" Background="#2D2D30"
                             Foreground="White" BorderBrush="#3E3E42"
                             Padding="6,4"/>
                    <Button Content="{StaticResource BrowseButton}"
                            Command="{Binding SelectOutputDirectoryCommand}"
                            Style="{StaticResource BrowseButtonStyle}"/>
                </StackPanel>

                <!-- Output file name -->
                <StackPanel Orientation="Horizontal" Margin="0 8 0 0">
                    <TextBlock Text="{StaticResource OutputFileNameLabel}"
                               Foreground="White" Width="90"
                               VerticalAlignment="Center" Margin="0 0 5 0"/>
                    <TextBox Text="{Binding OutputFileName}"
                             Width="220" Margin="0 0 10 0"
                             Background="#2D2D30" Foreground="White"
                             BorderBrush="#3E3E42"
                             Padding="6,4"/>
                </StackPanel>

            </StackPanel>

            <!-- DISPLAY -->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <!--CURRENT EXPRESSION-->
                <TextBox Grid.Row="0"
                         Text="{Binding CurrentExpression, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="24" FontWeight="Bold"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Right"
                         Background="#1E1E1E" Foreground="#999999"
                         BorderThickness="0"
                         IsReadOnly="True"/>
                <!--INPUT-->
                <TextBox Grid.Row="1"
                         Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="44" FontWeight="Bold"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Right"
                         Background="#1E1E1E" Foreground="White"
                         BorderThickness="0" Margin="0 0 0 10"
                         IsReadOnly="True"/>
            </StackPanel>

            <!-- BUTTON GRID -->
            <Grid Grid.Row="2" Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: C, ←, -, + -->
                <Button Grid.Row="0" Grid.Column="0" Content="{StaticResource ButtonClear}"
                        Command="{Binding ClearCommand}"
                        Style="{StaticResource SpecialCalculatorButtonStyle}"/>

                <Button Grid.Row="0" Grid.Column="1" Content="{StaticResource ButtonBackspace}"
                        Command="{Binding BackSpaceCommand}"
                        Style="{StaticResource SpecialCalculatorButtonStyle}"/>

                <Button Grid.Row="0" Grid.Column="2" Content="{StaticResource ButtonSubtract}"
                        Command="{Binding OperationCommand}" CommandParameter="-"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <Button Grid.Row="0" Grid.Column="3" Content="{StaticResource ButtonAdd}"
                        Command="{Binding OperationCommand}" CommandParameter="+"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 1: 1, 2, 3, ÷ -->
                <Button Grid.Row="1" Grid.Column="0" Content="1"
                        Command="{Binding DigitCommand}" CommandParameter="1"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="1" Grid.Column="1" Content="2"
                        Command="{Binding DigitCommand}" CommandParameter="2"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="1" Grid.Column="2" Content="3"
                        Command="{Binding DigitCommand}" CommandParameter="3"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="1" Grid.Column="3" Content="{StaticResource ButtonDivide}"
                        Command="{Binding OperationCommand}" CommandParameter="/"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 2: 4, 5, 6, × -->
                <Button Grid.Row="2" Grid.Column="0" Content="4"
                        Command="{Binding DigitCommand}" CommandParameter="4"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="2" Grid.Column="1" Content="5"
                        Command="{Binding DigitCommand}" CommandParameter="5"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="2" Grid.Column="2" Content="6"
                        Command="{Binding DigitCommand}" CommandParameter="6"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="2" Grid.Column="3" Content="{StaticResource ButtonMultiply}"
                        Command="{Binding OperationCommand}" CommandParameter="*"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 3: 7, 8, 9 -->
                <Button Grid.Row="3" Grid.Column="0" Content="7"
                        Command="{Binding DigitCommand}" CommandParameter="7"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="3" Grid.Column="1" Content="8"
                        Command="{Binding DigitCommand}" CommandParameter="8"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="3" Grid.Column="2" Content="9"
                        Command="{Binding DigitCommand}" CommandParameter="9"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <!-- = spans rows 3-4, column 3 -->
                <Button Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" Content="{StaticResource ButtonEqual}"
                        Command="{Binding EvaluateCommand}"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 4: 0 spans columns 0-2 -->
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="0"
                        Command="{Binding DigitCommand}" CommandParameter="0"
                        Style="{StaticResource CalculatorButtonStyle}"/>
            </Grid>

            <!-- Evaluate from file button -->
            <Button Grid.Row="3"
                    Content="{StaticResource EvaluateFromFileButton}"
                    Height="40"
                    Margin="10"
                    Command="{Binding EvaluateFromFileCommand}"
                    Style="{StaticResource EvaluateFromFileButtonStyle}"
                    HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- BUSY OVERLAY -->
        <Grid Background="#80000000"
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">

            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center"
                     Width="60" Height="60">
                <Grid>
                    <Ellipse Height="50" Width="50" Stroke="#555555"
                             StrokeThickness="4"/>
                    <Ellipse Height="50" Width="50" Stroke="White"
                             StrokeThickness="4"
                             StrokeDashArray="8 4"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="spinnerRotate" />
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="spinnerRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360"
                                                         Duration="0:0:1.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>
            </Viewbox>

        </Grid>
    </Grid>
</Window>