<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Calculator"
        Title="Calculator" Height="600" Width="440">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="./Resources/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="./Resources/Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="./Resources/Styles/SpinnerStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid Background="{StaticResource AppBackgroundBrush}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- FILE SELECTION SECTION (RESPONSIVE) -->
            <Grid Grid.Row="0" Margin="10 10 10 20" IsSharedSizeScope="True">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!-- Input file -->
                    <Grid Grid.Row="0" Margin="0 8 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="FileLabelColumn"/>
                            <!-- label -->
                            <ColumnDefinition Width="*"/>
                            <!-- textbox flexible -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- browse -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{StaticResource InputFileLabel}"
                               Style="{StaticResource FileLabelTextBlockStyle}"
                               VerticalAlignment="Center"
                               Grid.Column="0"/>

                        <TextBox Text="{Binding InputFilePath}"
                             Style="{StaticResource FileInputTextBoxStyle}"
                             VerticalAlignment="Center"
                             Margin="10 0 10 0"
                             Grid.Column="1"/>

                        <Button Content="{StaticResource BrowseButton}"
                            Command="{Binding SelectInputFileCommand}"
                            Style="{StaticResource BrowseButtonStyle}"
                            VerticalAlignment="Center"
                            Grid.Column="2"/>
                    </Grid>

                    <!-- Output directory -->
                    <Grid Grid.Row="1" Margin="0 8 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="FileLabelColumn"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{StaticResource OutputDirLabel}"
                               Style="{StaticResource FileLabelTextBlockStyle}"
                               VerticalAlignment="Center"
                               Grid.Column="0"/>

                        <TextBox Text="{Binding OutputDirectory}"
                             Style="{StaticResource FileInputTextBoxStyle}"
                             VerticalAlignment="Center"
                             Margin="10 0 10 0"
                             Grid.Column="1"/>

                        <Button Content="{StaticResource BrowseButton}"
                            Command="{Binding SelectOutputDirectoryCommand}"
                            Style="{StaticResource BrowseButtonStyle}"
                            VerticalAlignment="Center"
                            Grid.Column="2"/>
                    </Grid>

                    <!-- Output file name -->
                    <Grid Grid.Row="3" Margin="0 8 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="FileLabelColumn"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{StaticResource OutputFileNameLabel}"
                               Style="{StaticResource FileLabelTextBlockStyle}"
                               VerticalAlignment="Center"
                               Grid.Column="0"/>

                        <TextBox Text="{Binding OutputFileName}"
                             Style="{StaticResource FileInputTextBoxStyle}"
                             VerticalAlignment="Center"
                             Margin="10 0 10 0"
                             Grid.Column="1"/>
                    </Grid>

            </Grid>
            <!-- DISPLAY -->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <!-- Current Expression -->
                <TextBox Text="{Binding CurrentExpression, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource CurrentExpressionTextBoxStyle}"/>

                <!-- Current Input -->
                <TextBox Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource CurrentInputTextBoxStyle}"/>
            </StackPanel>

            <!-- BUTTON GRID -->
            <Grid Grid.Row="2" Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: C, ←, -, + -->
                <Button Grid.Row="0" Grid.Column="0" 
                        Content="{StaticResource ButtonClear}"
                        Command="{Binding ClearCommand}"
                        Style="{StaticResource SpecialCalculatorButtonStyle}"/>

                <Button Grid.Row="0" Grid.Column="1" 
                        Content="{StaticResource ButtonBackspace}"
                        Command="{Binding BackSpaceCommand}"
                        Style="{StaticResource SpecialCalculatorButtonStyle}"/>

                <Button Grid.Row="0" Grid.Column="2" 
                        Content="{StaticResource ButtonSubtract}"
                        Command="{Binding OperationCommand}" CommandParameter="-"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <Button Grid.Row="0" Grid.Column="3" 
                        Content="{StaticResource ButtonAdd}"
                        Command="{Binding OperationCommand}" CommandParameter="+"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 1: 1, 2, 3, ÷ -->
                <Button Grid.Row="1" Grid.Column="0" Content="1"
                        Command="{Binding DigitCommand}" CommandParameter="1"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="1" Grid.Column="1" Content="2"
                        Command="{Binding DigitCommand}" CommandParameter="2"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="1" Grid.Column="2" Content="3"
                        Command="{Binding DigitCommand}" CommandParameter="3"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="1" Grid.Column="3" 
                        Content="{StaticResource ButtonDivide}"
                        Command="{Binding OperationCommand}" CommandParameter="/"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 2: 4, 5, 6, × -->
                <Button Grid.Row="2" Grid.Column="0" Content="4"
                        Command="{Binding DigitCommand}" CommandParameter="4"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="2" Grid.Column="1" Content="5"
                        Command="{Binding DigitCommand}" CommandParameter="5"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="2" Grid.Column="2" Content="6"
                        Command="{Binding DigitCommand}" CommandParameter="6"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="2" Grid.Column="3" 
                        Content="{StaticResource ButtonMultiply}"
                        Command="{Binding OperationCommand}" CommandParameter="*"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 3: 7, 8, 9 -->
                <Button Grid.Row="3" Grid.Column="0" Content="7"
                        Command="{Binding DigitCommand}" CommandParameter="7"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="3" Grid.Column="1" Content="8"
                        Command="{Binding DigitCommand}" CommandParameter="8"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <Button Grid.Row="3" Grid.Column="2" Content="9"
                        Command="{Binding DigitCommand}" CommandParameter="9"
                        Style="{StaticResource CalculatorButtonStyle}"/>

                <!-- = spans rows 3-4, column 3 -->
                <Button Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" 
                        Content="{StaticResource ButtonEqual}"
                        Command="{Binding EvaluateCommand}"
                        Style="{StaticResource OperatorButtonStyle}"/>

                <!-- Row 4: 0 spans columns 0-2 -->
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" 
                        Content="0"
                        Command="{Binding DigitCommand}" CommandParameter="0"
                        Style="{StaticResource CalculatorButtonStyle}"/>
            </Grid>

            <!-- Evaluate from file button -->
            <Button Grid.Row="3"
                    Content="{StaticResource EvaluateFromFileButton}"
                    Height="40" Margin="10"
                    Command="{Binding EvaluateFromFileCommand}"
                    Style="{StaticResource EvaluateFromFileButtonStyle}"
                    HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- BUSY OVERLAY -->
        <Grid Style="{StaticResource LoadingSpinnerStyle}"
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">

            <Viewbox Style="{StaticResource SpinnerViewboxStyle}">
                <Control Template="{StaticResource SpinnerTemplate}"/>
            </Viewbox>

        </Grid>
    </Grid>
</Window>