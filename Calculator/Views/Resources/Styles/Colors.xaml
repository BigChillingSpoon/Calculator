<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="DisabledButtonBrush" Color="#252526"/>
    <SolidColorBrush x:Key="BorderBrushDefault" Color="#3E3E42"/>

    <!-- Text -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#999999"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="BrowseButtonTextBrush" Color="White"/>

    <!-- Accent Buttons -->
    <SolidColorBrush x:Key="AccentBlueBrush" Color="#0E639C"/>
    <SolidColorBrush x:Key="AccentBlueHoverBrush" Color="#1177BB"/>
    <SolidColorBrush x:Key="AccentBluePressedBrush" Color="#0D5A8F"/>

    <SolidColorBrush x:Key="AccentGreenBrush" Color="#16825D"/>
    <SolidColorBrush x:Key="AccentGreenHoverBrush" Color="#1A9870"/>
    <SolidColorBrush x:Key="AccentGreenPressedBrush" Color="#126B4A"/>

    <SolidColorBrush x:Key ="AccentGrayBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key ="AccentGrayHoverBrush" Color="#4E4E52"/>
    <SolidColorBrush x:Key ="AccentGrayPressedBrush" Color="#2E2E32"/>

    <SolidColorBrush x:Key = "DarkGrayBrush" Color ="#2D2D30"/>
    <SolidColorBrush x:Key = "DarkGrayHoverBrush" Color ="#3E3E42"/>
    <SolidColorBrush x:Key = "DarkGrayPressedBrush" Color ="#1E1E1E"/>

    <!-- Overlay(with aplha) -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#80000000"/>

</ResourceDictionary>